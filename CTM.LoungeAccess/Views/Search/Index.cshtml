
@{
    ViewData["Title"] = "Index";
}

@model List<Lounge>;

    <div class="row">
        <div class="col-md-3">
            <h2><b>Find a lounge</b></h2>
            @ViewBag.AirportCode Airport
        </div>
    </div>
    @for (int i = 0; i < Model.Count(); i++)
{

    <br />

    <div class="row">
        <div class="col-md-3">
            <br />
            <img src=@Model[i].ImageUrl width="335" height="205" />
            <br />
            <b> @Model[i].Title</b>
            <br />
            Terminal 1 (International)
            <br />
            @Model[i].Rating
            <br />
        </div>
    </div>
}


